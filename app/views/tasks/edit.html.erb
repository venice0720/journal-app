<div class="d-flex align-items-center justify-content-center">
    <h1>Edit your Journal</h1>
</div>
<%= form_for :task,method: :put, model: [@category,@task], locale: true do |f|  %>
  <div class="container-sm">
    <div class="mb-3">
        <% if @task.errors.any? %>
        <ul>
            <% @task.errors.full_messages.each do |message| %>
                <li class="text-danger"> <%= message %> </li>
            <% end %>
        </ul>
        <% end %>
    </div>
   <div class="form-group">
    <div>
        <%= f.label 'Task Name',for:"exampleFormControlInput1", class: "form-label" %>
        <%= f.text_field :task_name, class: "form-control",id:"exampleFormControlInput1" %>

    <div>

    <div>
        <%= f.label 'Task Description',for:"exampleFormControlTextarea1",class:"form-label" %>
        <%= f.text_field :task_description,class:"form-control",id:"exampleFormControlTextarea1", rows:"3" %>

    <div>
<div>
        <%= f.label 'Deadline',for:"exampleFormControlTextarea1",class:"form-label" %>
       
        <%= f.date_field :deadline,class:"form-control",id:"exampleFormControlTextarea1", rows:"3" %>

    <div>
    <div>
    <%= link_to ' Back', categories_path,class: "btn btn-success btn-md far fa-hand-point-left" %>
    <%= f.submit class: " btn btn-primary btn-sm" %>

    <div>

<% end %>