<div class="d-flex align-items-center justify-content-center">
<div class="jumbotron bg-image shadow-1-strong" style="
      background-image: url(/assets//wood-backround.jpg); background-size: 100% 100%; ">
    <h1 class ="text-gray">Create Journal</h1>

<%= form_with scope: :category,  model: [@user,@category], locale: true do |f|  %>
 <div class="container-sm">
    <div class="mb-3">
        <% if @category.errors.any? %>
        <ul>
            <% @category.errors.full_messages.each do |message| %>
                <li class="text-danger"> <%= message %> </li>
            <% end %>
        </ul>
    <% end %>
  </div>
    <div>
        <%= f.label :Title,for:"exampleFormControlInput1", class: "form-label" %>
        <%= f.text_field :title, class: "form-control",id:"exampleFormControlInput1" %>

    </div>

    <div>
        <%= f.label :Notes,for:"exampleFormControlTextarea1",class:"form-label" %>
        <%= f.text_field :description,class:"form-control",id:"exampleFormControlTextarea1", rows:"3" %>

    </div>

    <div>
    <%= link_to ' Back', categories_path,class: "btn btn-success btn-md far fa-hand-point-left" %>
    <%= f.submit class: " btn btn-primary btn-sm" %>

    </div>

<% end %>
</div>
</div>